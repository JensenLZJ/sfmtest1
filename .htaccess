# Protect PNG files from direct access
<Files "*.png">
    Order Allow,Deny
    Deny from all
</Files>

# Allow access only from your domain
<Files "*.png">
    SetEnvIf Referer "^https?://(www\.)?samudrafm\.com" local_referer
    SetEnvIf Referer "^https?://localhost" local_referer
    SetEnvIf Referer "^https?://127\.0\.0\.1" local_referer
    Order Deny,Allow
    Deny from all
    Allow from env=local_referer
</Files>

# Block direct access to images folder
<Directory "images">
    Order Allow,Deny
    Deny from all
</Directory>

# Allow access to images only through your website
<Directory "images">
    SetEnvIf Referer "^https?://(www\.)?samudrafm\.com" local_referer
    SetEnvIf Referer "^https?://localhost" local_referer
    SetEnvIf Referer "^https?://127\.0\.0\.1" local_referer
    Order Deny,Allow
    Deny from all
    Allow from env=local_referer
</Directory>