# Extension Blocking and Security Headers
# This file provides server-level protection against browser extensions

# Security Headers
Header always set X-Content-Type-Options "nosniff"
Header always set X-Frame-Options "DENY"
Header always set X-XSS-Protection "1; mode=block"
Header always set Referrer-Policy "strict-origin-when-cross-origin"
Header always set Permissions-Policy "encrypted-media=*, autoplay=*, microphone=(), camera=(), fullscreen=*, geolocation=(), payment=(), usb=(), accelerometer=(), gyroscope=(), magnetometer=(), display-capture=(), web-share=*, clipboard-read=(), clipboard-write=(), picture-in-picture=*"

# Content Security Policy
Header always set Content-Security-Policy "default-src 'self'; img-src 'self' data: https:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com https://cdnjs.cloudflare.com; frame-src https://www.mixcloud.com https://widget.mixcloud.com https://player-widget.mixcloud.com; script-src 'self' 'unsafe-inline' 'unsafe-eval' blob: https://widget.mixcloud.com https://cdnjs.cloudflare.com https://www.googleapis.com; script-src-elem 'self' 'unsafe-inline' blob: https://widget.mixcloud.com https://cdnjs.cloudflare.com https://www.googleapis.com; connect-src 'self' https://api.mixcloud.com https://widget.mixcloud.com https://www.googleapis.com https://graph.instagram.com; media-src 'self' https://www.mixcloud.com https://widget.mixcloud.com; object-src 'none'; base-uri 'self'; form-action 'self'; worker-src 'self'; child-src 'self'; frame-ancestors 'none';"

# Block extension protocols
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Block chrome-extension:// URLs
    RewriteCond %{QUERY_STRING} chrome-extension:// [NC]
    RewriteRule .* - [F,L]
    
    # Block moz-extension:// URLs
    RewriteCond %{QUERY_STRING} moz-extension:// [NC]
    RewriteRule .* - [F,L]
    
    # Block safari-extension:// URLs
    RewriteCond %{QUERY_STRING} safari-extension:// [NC]
    RewriteRule .* - [F,L]
    
    # Block ms-browser-extension:// URLs
    RewriteCond %{QUERY_STRING} ms-browser-extension:// [NC]
    RewriteRule .* - [F,L]
    
    # Block extension:// URLs
    RewriteCond %{QUERY_STRING} extension:// [NC]
    RewriteRule .* - [F,L]
</IfModule>

# Block extension-related user agents
<IfModule mod_rewrite.c>
    RewriteCond %{HTTP_USER_AGENT} chrome-extension [NC]
    RewriteRule .* - [F,L]
    
    RewriteCond %{HTTP_USER_AGENT} moz-extension [NC]
    RewriteRule .* - [F,L]
    
    RewriteCond %{HTTP_USER_AGENT} safari-extension [NC]
    RewriteRule .* - [F,L]
    
    RewriteCond %{HTTP_USER_AGENT} ms-browser-extension [NC]
    RewriteRule .* - [F,L]
</IfModule>

# Block extension-related referrers
<IfModule mod_rewrite.c>
    RewriteCond %{HTTP_REFERER} chrome-extension:// [NC]
    RewriteRule .* - [F,L]
    
    RewriteCond %{HTTP_REFERER} moz-extension:// [NC]
    RewriteRule .* - [F,L]
    
    RewriteCond %{HTTP_REFERER} safari-extension:// [NC]
    RewriteRule .* - [F,L]
    
    RewriteCond %{HTTP_REFERER} ms-browser-extension:// [NC]
    RewriteRule .* - [F,L]
</IfModule>

# Prevent caching of sensitive content
<IfModule mod_headers.c>
    <FilesMatch "\.(html|htm|js|css|json)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
</IfModule>

